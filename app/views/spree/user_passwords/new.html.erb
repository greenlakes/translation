<%= render partial: 'spree/shared/error_messages', locals: { target: @spree_user } %>

<div class ='row'>
  <div class='col-md-4 col-md-offset-4'>

<div id="forgot-password" class = 'panel panel-default'>
  <div class = 'panel-heading'><%= Spree.t(:forgot_password) %></div>
   
   <div data-hook="recover-password" class='panel-body'>

 <%= Spree.t(:instructions_to_reset_password) %>
  <hr>

  <%= form_for Spree::User.new, as: :spree_user, url: spree.reset_password_path do |f| %>
    <p>
      <%= f.label :email, Spree.t(:email) %>
      <%= f.email_field :email, class: 'title form-control' %>
    </p>
    <div class='actions'><%= f.submit Spree.t(:reset_password),class: 'btn btn-success btn-block' %></div>
  <% end %>
</div>
</div>
</div>
</div>